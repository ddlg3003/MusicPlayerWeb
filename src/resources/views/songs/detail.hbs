<div class="player">
<!-- Dashboard -->
<div class="dashboard">
    <!-- Header -->
    <header>
        <h2>{{song.name}} 
            <span class="option">
                <i style="padding-left:12px; opacity: 0.5" class="fas fa-ellipsis-h"></i>
            </span>
        </h2>
        <h4>{{song.singer}}</h4>
    </header>
    <!-- Content -->
    <div class="song-properties">
        <!-- CD -->
        <div class="cd-thumb" style="background-image: url('{{song.image}}')">
        </div>
        {{!-- control --}}
        <div class="control">
            <div class="btn btn-toggle-play">
                <i class="fas fa-pause icon-pause"></i>
                <i class="fas fa-play icon-play"></i>
            </div>
        </div>
        <input id="progress" class="progress-music" type="range" value="0" step="1" min="0" max="100">
        <audio id="audio" src="https://docs.google.com/uc?export=download&id={{song.path}}"></audio>
    </div>
</div>
<script src="/javascript/detail.js"></script>